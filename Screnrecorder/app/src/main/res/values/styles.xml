<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:tabWidgetStyle">@style/tab</item>
    </style>

    <style name="tab" parent="Base.Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:color">@color/green</item>

    </style>

    <style name="MyActionBarTabStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="textStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
