<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/record_move"
            android:layout_width="@dimen/floatlayout"
            android:layout_height="@dimen/floatlayout"
            android:layout_margin="@dimen/floatmargin"
            android:background="@drawable/relative_record_background">

            <ImageView
                android:id="@+id/record"
                android:layout_width="@dimen/floatimage"
                android:layout_height="@dimen/floatimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margintop"
                android:src="@drawable/camer2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/record"
                android:layout_centerHorizontal="true"
                android:text="@string/record"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/capture_move"
            android:layout_width="@dimen/floatlayout"
            android:layout_height="@dimen/floatlayout"
            android:layout_margin="@dimen/floatmargin"
            android:background="@drawable/realtive_selector">

            <ImageView
                android:id="@+id/capture"
                android:layout_width="@dimen/floatimage"
                android:layout_height="@dimen/floatimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margintop"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/camer3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capture"
                android:layout_centerHorizontal="true"
                android:text="@string/capture"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/review_move"
            android:layout_width="@dimen/floatlayout"
            android:layout_height="@dimen/floatlayout"
            android:layout_margin="@dimen/floatmargin"
            android:background="@drawable/realtive_selector">

            <ImageView
                android:id="@+id/review"
                android:layout_width="@dimen/floatimage"
                android:layout_height="@dimen/floatimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margintop"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/camer4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review"
                android:layout_centerHorizontal="true"
                android:text="@string/review"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_move"
            android:layout_width="@dimen/floatlayout"
            android:layout_height="@dimen/floatlayout"
            android:layout_margin="@dimen/floatmargin"
            android:background="@drawable/relative_setting_background">

            <ImageView
                android:id="@+id/record_setting"
                android:layout_width="@dimen/floatimage"
                android:layout_height="@dimen/floatimage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margintop"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/record_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="@string/setting"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/textsize" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="-14dp"
        android:layout_toRightOf="@id/linear"
        android:src="@drawable/ic_close" />

</RelativeLayout>
